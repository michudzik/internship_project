<div class="jumbotron">
	<h1><%= @ticket.title %></h1>
</div>
<div class="tickets-display">
	<p>
	<strong>ID:</strong>	
	<%= @ticket.id %>
	<hr />
	<strong>Title:</strong>	
	<%= @ticket.title %>
	<hr />
	<strong>Content:</strong>	
	<%= @ticket.note %>
	<hr />
	<strong>Author name:</strong>	
	<%= @ticket.user.fullname %>
	<hr />
	<strong>Created at</strong>	:
	<%= @ticket.created_at %>
	<hr />
	<strong>Updated at:</strong>	
	<%= @ticket.updated_at %>
	</p>
</div>


<div class="jumbotron">
	<h2>Comments</h2>
</div>
<div class="tickets-display">
	<% @ticket.comments.each do |comment| %>
		<p>
		<strong>Body:</strong>
		<%= comment.body %>
		<br />
	<% end %>
</div>

<% unless ticket.closed? %>
	<div class="jumbotron">
		<h2>Add new comment</h2>
	</div>

	<div class="tickets-display">
		<%= render 'comments/form' %>
	</div>
<% end %>

<%= button_to 'Close', user_ticket_path(@ticket.id), method: :put, class: 'btn btn-danger' %>