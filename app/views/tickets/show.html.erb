<div class="tickets-display">
	<p>
	<strong>ID:</strong>	
	<%= @ticket.id %>
	<hr />
	<strong>Title:</strong>	
	<%= @ticket.title %>
	<hr />
	<strong>Content:</strong>	
	<%= @ticket.note %>
	<hr />
	<strong>Author name:</strong>	
	<%= @ticket.user.fullname %>
  <% if @ticket.uploads.attached? %>
    <hr />
    <strong>Attachment:</strong> 
      <% @ticket.uploads.each_with_index do |upload, i| %>
      <%= link_to("Document #{i+1}", rails_blob_path(upload, disposition: "attachment")) %>
    <% end %>
  <% end %>
	<hr />
	<strong>Created at</strong>	:
	<%= @ticket.created_at %>
	<hr />
	<strong>Updated at:</strong>	
	<%= @ticket.updated_at %>
	</p>
</div>

<% @ticket.comments.each do |comment| %>
  <div>
    <% if comment.user.role.name == 'none' %>
      <div class="comments-section">
        <h5 class="commenter-name"><%= comment.user.fullname + ' ' + comment.user.role.name%></h5>
        <br />
        <h5><%= comment.body %></h5>
        <br />
        <span class="time-right"><%= comment.created_at.in_time_zone("Warsaw").strftime("%k:%M") %></span>       
      </div>
    <% elsif comment.user.role.name == 'it_support' || current_user.role.name == 'om_support' || comment.user.role.name == 'admin' %>
      <div class="comments-section darker">
        <h5 class="commenter-name"><%= comment.user.fullname + ' ' + comment.user.role.name %></h5>
        <br />          
        <h5><%= comment.body %></h5>          
        <br />
        <span class="time-left"><%= comment.created_at.in_time_zone("Warsaw").strftime("%I:%M") %></span>
      </div>
    <% end %>
  </div>
<% end %>

  <% unless @ticket.closed? %>
    <div class="jumbotron">
      <h2>Add new comment</h2>
    </div>

    <div class="tickets-display">
      <%= render 'comments/form' %>
    </div>
  <% end %>

  <%= button_to 'Close', user_ticket_path(@ticket.id), method: :put, class: 'btn btn-danger' %>
</div>