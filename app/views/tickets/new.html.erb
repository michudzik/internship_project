<% if @ticket.errors.any? %>
  <ul>
    <% @ticket.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1><center> Create new ticket </center></h1>
      <%= form_for [current_user, current_user.tickets.build] do |f| %>
        <%= f.label :department_id %>
        <%= f.select :department_id, @departments, {}, class: 'custom-select' %>
        <hr />
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
        <hr />
        <%= f.label :note , 'Body' %>
        <%= f.text_area :note, class: 'form-control', cols: '16', rows: '6' %>
        <hr />
        <%= f.file_field :uploads, multiple: true %>
        <hr />
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

