.container
  .row
    .col-md-6.offset-md-3
      %h2.registration-header
        Edit #{h resource_name.to_s.humanize}
      .registration-form
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          %h4.registration-header
            = resource.email
          .registration-personalData
            .registration-field
              = f.label :first_name, class: 'registration-label'
              = f.text_field :first_name, class: 'form-control'
            .registration-field
              = f.label :last_name, class: 'registration-label'
              = f.text_field :last_name, class: 'form-control'
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{h resource.unconfirmed_email }

          .registration-password
            %p{ align: 'center' }
              Leave blank if you do not want to change it
            .registration-field
              = f.label :password, class: 'registration-label'
              - if @minimum_password_length
                %i
                  (#{h @minimum_password_length} characters minimum)
              = f.password_field :password, autocomplete: 'off', class: 'form-control'
            .registration-field
              = f.label :password_confirmation, class: 'registration-label'
              %br/
              = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
            %hr/
            .registration-field
              = f.label :current_password, class: 'registration-label'
              %i
                (we need your current password to confirm your changes)
              = f.password_field :current_password, autocomplete: 'off', class: 'form-control'
          .actions
            = f.submit 'Update', class: 'btn btn-primary btn-block'
