<tr data-user-id="<%= user.id %>">
  <td full_name-user-id="<%= user.id %>"><%= user.full_name %></td>
  <td email-user-id="<%= user.id %>"><%= user.email %></td>
  <td>
    <%= form_for(user, url: user_path(user.id), method: :put, remote: true) do |f| %>
      <div class="input-group">
        <div class="input-group-btn">
           <%= f.select :role_id, @roles, {}, class: 'custom-select' %>
        </div>
        <%= f.submit 'Save', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </td>
  <% if user.access_locked? %>
    <td status-user-id="<%= user.id %>">Status: Inactive</td>
    <td>
      <%= link_to 'Activate', activate_account_user_path(user.id), method: :put, class: 'btn btn-primary' %>
    </td>
  <% else %>
    <td status-user-id="<%= user.id %>">Status: Active</td>
    <td>
        <%= render 'deactivate_account_modal', user: user %>
    </td>
  <% end %>
</tr>