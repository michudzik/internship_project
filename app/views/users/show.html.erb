<div class="container">
  <h1>My tickets</h1>
      
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Status</th>
            <th scope="col">Last response</th>
          </tr>
        </thead>
        <tbody>
          <% if current_user.tickets.any? %>
          <% current_user.tickets.each do |ticket| %>
            <tr>
              <td><%= link_to ticket.title, ticket_path(id: ticket.id) %></td>
              <td><%= ticket.status.status.humanize.to_s %></td>
              <td>
                <% if ticket.comments.any? %>
                  <%= ticket.comments.last.updated_at.in_time_zone("Warsaw").strftime("%k:%M %d-%m-%Y") %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  <% end %>
</div>
