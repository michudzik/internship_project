<div class="container">
  <h1>Users</h1>

  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Filter
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <%= link_to 'All', users_path, class: 'dropdown-item' %>
      <%= link_to 'Locked', users_locked_path, class: 'dropdown-item' %>
      <%= link_to 'Unlocked', users_unlocked_path, class: 'dropdown-item' %>
    </div>
  </div>

    <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      Count
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <%= link_to '10', users_unlocked_path(:number => 10), class: 'dropdown-item' %>
      <%= link_to '30', users_unlocked_path(:number => 30), class: 'dropdown-item' %>
      <%= link_to '50', users_unlocked_path(:number => 50), class: 'dropdown-item' %>
    </div>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th colspan="2">Change role</th>
      </tr>
    </thead>
    <tbody>
      <% cache @users do %>
        <% @users_unlocked.each do |user| %>
          <% cache user do %>
            <%= render 'user', user: user %>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% if @users_unlocked.any? %>
    <div>
      <%= will_paginate @users_unlocked, :container => false %>
    </div>
  <% end %>
</div>